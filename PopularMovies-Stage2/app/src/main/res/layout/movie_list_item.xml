<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/poster_image"
        android:id="@+id/movie_list_poster"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_list_title"
        tools:text="Title"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/movie_list_poster"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_list_genres"
        tools:text="ListGenres"
        app:layout_constraintBottom_toTopOf="@+id/movie_list_average_vote"
        app:layout_constraintLeft_toRightOf="@+id/imageView"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/star_big_on"
        tools:layout_editor_absoluteY="79dp"
        tools:layout_editor_absoluteX="132dp"
        android:id="@+id/imageView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Vote"
        android:id="@+id/movie_list_average_vote"
        tools:layout_editor_absoluteY="95dp"
        tools:layout_editor_absoluteX="164dp"/>
    <ProgressBar
        android:layout_width="108dp"
        android:layout_height="18dp"
        style="?android:progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/movie_list_poster"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

</android.support.constraint.ConstraintLayout>